<div class="container">
  <h1 class="my-4">Welcome to the Tech Blog</h1>
  
  {{#each posts as |post|}}
  <div class="card mb-4">
    <div class="card-header">
      <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
      <p>Posted by {{post.user.username}} on 
        {{#if post.created_at}}
          {{format_date post.created_at}}
        {{else}}
          Unknown Date
        {{/if}}
      </p>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.content}}</p>
    </div>
  </div>
  {{/each}}
</div>